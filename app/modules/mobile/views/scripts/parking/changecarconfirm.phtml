{%include file="parking/common/header.phtml"%}

<div id="carShop">
	<img src="{%$staticUrl%}/apps/parking/mimg/spacer.gif" width="1" height="5" /><br />

	<div class="headline" style="background:#cd424a;">
		<span style="color:#fff;">&nbsp;{%$carInfo.name%}を購入</span><br />
	</div><!--/.headline-->

	<div class="carInfo">
		<img src="{%$staticUrl%}/apps/parking/mimg/spacer.gif" width="1" height="2" /><br />
		<span style="color:#cd424a;"></span><br />
		駐車料金×{%$carInfo.times%}/¥{%$carInfo.price|outputdollars%}<br />
		<div style="background:#fcc;text-align:center;"><img src="{%$staticUrl%}/apps/parking/mimg/dot.gif" width="228" height="1" /></div>
		<span style="color:#c00;">購入後の所持金:¥{%$remainAsset|outputdollars%}</span><br />
	</div><!--/.carInfo-->

	<div class="inner">
		<img src="{%$staticUrl%}/apps/parking/mimg/spacer.gif" width="1" height="2" /><br />
		購入する場合は､ｶﾗｰを選択し､購入をｸﾘｯｸ<br />
		<div class="commodity" style="text-align:center;">
			<img src="{%$staticUrl%}/apps/parking/mimg/car/{%$carInfo.cav_name%}/m/normal/{%$carInfo.color%}.gif" width="200" height="100" /><br />
			<form method="post" action="{%$baseUrl%}/mobile/parking/changecarsubmit?app_id={%$APP_ID%}">
				<input type="hidden" name="oldCarId" value="{%$oldCarId%}" />
				<input type="hidden" name="oldCarColor" value="{%$oldCarColor%}" />
				<input type="hidden" name="newCarId" value="{%$newCarId%}" />
				<input type="hidden" name="newCarName" value="{%$carInfo.name%}" />
				<input type="hidden" name="newCarCavName" value="{%$carInfo.cav_name%}" />
				<select name="color">
					<option value="black" {%if $carInfo.color == 'black'%}selected="selected"{%/if%}>黒</option>
					<option value="white" {%if $carInfo.color == 'white'%}selected="selected"{%/if%}>白</option>
					<option value="silver" {%if $carInfo.color == 'silver'%}selected="selected"{%/if%}>銀</option>
					<option value="yellow" {%if $carInfo.color == 'yellow'%}selected="selected"{%/if%}>黄</option>
					<option value="red" {%if $carInfo.color == 'red'%}selected="selected"{%/if%}>赤</option>
					<option value="blue" {%if $carInfo.color == 'blue'%}selected="selected"{%/if%}>青</option>
				</select><input type="submit" value="購入" /><br />
			</form>
		</div><!--/.commodity-->
	</div><!--/.inner-->

	<div class="link">
		<img src="{%$staticUrl%}/apps/parking/mimg/spacer.gif" width="1" height="2" /><br />
		<span style="color:#cd424a;">⇒</span><a href='{% "$baseUrl/mobile/parking/carshop"|mixiurl %}'>ｶｰｼｮｯﾌﾟにもどる</a><br />
	</div><!--/.link-->

</div><!--/#carShop-->

{%include file="parking/common/footer.phtml"%}