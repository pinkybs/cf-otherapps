    .headlineTip {
        background:#fdd89e;
        color:#000000;
    }

    .toTop {
        background-color:#ffffff;
    }

    #copyright {
        background:#fbb03b;
    }

    .owner {
        background:#fbf8c9;
    }

    .sectionImg {
        background:#dedcc6;
    }

    .sectionOne {
        background:#fbf8c9;
    }

    </style>
<div id="profile">
        <hr class="hrWhite" size="1" />
        <div class="owner">
            <table width="100%" cellpadding="0" cellspacing="0" border="0">
                <tr>
                    <td valign="top" width="44" align="center" style="width:44px;text-align:center;"><img src="{%$staticUrl%}/apps/hotel/mobile/img/waiterSmall.gif" style="margin:2px 0;" /></td>
                    <td valign="top" style="padding-top:5px;">レストラン担当（<a href='{% "$baseUrl/mobile/hotel/techlist"|mixiurl %}'>Lv{%$roomInfo.restaurant%}</a>)<br />
                            <span style="font-size:small;color:#ffcc00;">"店長様、レストランもホテルの収入ですね～！"</span></td>
                </tr>
            </table>
        </div><!--/.owner-->
        <div style="height:10px;" class="setInterval"></div>
        <div class="sectionImg">
            <div><img src="{%$staticUrl%}/apps/hotel/mobile/img/restManage2.gif" /></div>
        </div><!--/.section-->
        <div class="sectionOne">
            <hr class="hrSp" size="1" />
            <div class="headline"><span style="color:#666666;">〓</span>レストラン<span style="color:#666666;">〓</span>(lv{%$roomInfo.restaurant%})</div>
            <table width="100%" cellpadding="0" cellspacing="0" border="0">
                <tr>
                    <td width="100" align="center" style="padding-top:5px;width:100px;text-align:center;"><img src="{%$staticUrl%}/apps/hotel/mobile/img/restM.gif" width="100" height="59" /></td>
                    <td style="padding-top:5px;">
                        Lv：：{%$roomInfo.restaurant%}級<br/>
						使用率：：{%$fullInfo.restaurant_dining_rate%}%<br/>
						食事代：{%$fullInfo.restaurant_dining_fee%} 円<br/>
                    </td>
                </tr>
            </table>
            <div class="hint" style="text-align:left;">
                <span style="color:#ff9933;">⇒</span>
                {% if $techName == 'restaurant' %}
                                        アップグレード,要件を完了するためにも{%$time%}です
                {% else %}
                    <a href='{% "$baseUrl/mobile/hotel/roomupconfirm?CF_room=restM"|mixiurl %}'>詳細を見る</a>&nbsp;
                {%/if%}
            </div><!--/.hint-->
        </div><!--/.section-->
    </div><!--/#profile-->
    <hr class="hrWhite" size="1" />
